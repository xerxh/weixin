.commentBox{
  padding: 20rpx  30rpx;
}
.flexCol{
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  /* padding: 0 30rpx; */
}
.commentTitle{
  font-size: 15px;
  font-weight: bold;
  text-align: left;
}
.label{
  justify-content: flex-start;
  flex-wrap: wrap;
  margin-top: 10rpx;
  font-size: 28rpx;
  font-family: PingFang-Sc-Bold;
  color: #333333;
}
.labelText{
  /* margin-top: 30rpx; */
  background: #F2F3F7;
  color: #666666;
  font-size: 28rpx;
  border-radius: 10rpx;
  height: 55rpx;
  padding: 5rpx 24rpx;
  margin-right: 30rpx;
  margin-top: 30rpx;
  line-height: 55rpx;
}
.list{
  margin-bottom: 30rpx;
  position: relative;
  /* border-bottom: 1px solid black; */
}
.listBox{
  margin-top: 265rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  
}
/* 搜索外部样式 */
.clearPosition{
  right: 108rpx;
}

.topSize{
  margin-top:160rpx;
}
.listBox {
  padding: 0 30rpx; 
}
.historyMemoryBox, .hotListDataBox, .courseListBox {
  width: 100%;
}
.hitoryTitle, .hotTitle, .clearHitory {
  margin-top: 60rpx;
  margin-bottom: 40rpx;
  font-size: 28rpx;
  color: #333;
}
.clearHitory {
  float: right;
  font-size: 26rpx;
  color: #ccc;
}
.clearHitory:hover {
  color: 357AF3;
}
.historyItem, .hotItem {
  /* width: 100%; */
  /* padding: 20rpx 0; */
  /* font-size: 26rpx; */
  color: #357AF3;
  border-bottom: 1rpx solid #E6E6E6;

  background:#F2F3F7;
  /* color:#666666; */
  font-size:28rpx;
  border-radius:10rpx;
  height:55rpx;
  padding:13rpx 26rpx;
  margin-right:40rpx;
  text-align:center;
  margin-top:30rpx;
  line-height:55rpx;
  display: inline-block;

}
.courseItemBox {
  display: flex;
  justify-content: space-around;
}
.img {
  width: 280rpx;
  height: 200rpx;
}
.courseBox {
  box-sizing: border-box;
  width: 380rpx;
  height: 200rpx;
  padding: 10rpx 0 10rpx 10rpx;
  color: #333333;
  font-size: 28rpx;
  /* position: relative; */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.courseItemBox {
  margin-bottom: 30rpx;
}
.courseTitle {
  font-size: 28rpx;
  color: #333;
}
.bottom {
  display: flex;
  justify-content: space-between;
}
.price {
  display: flex;
  align-items: center;
  color: #CF0101;
  font-size: 26rpx;
}
.total {
  display: flex;
  align-items: center;
  color: #999;
  font-size: 20rpx;
}