}
.memberBox{
  display: flex;
  border-bottom: 1px solid rgba(221,221,221,1);
  /* justify-content: space-around; */
  flex-direction: column;
  align-items: center;
  /* height: 400rpx; */
  padding: 70rpx 30rpx;
}
.memberItemBox{
  display: flex;
  width: 100%;
  flex-wrap: wrap;
}

.active{
  background:rgba(255,247,220,1);
}
.mounth{
  font-size:24rpx;
  font-family:PingFang-SC-Heavy;
