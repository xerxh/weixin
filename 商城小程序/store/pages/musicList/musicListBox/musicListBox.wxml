<!--pages/musicList/musicListBox/musicListBox.wxml-->
<scroll-view 
  class="scroll_box" 
  scroll-x="true" 
  upper-threshold="50" 
  lower-threshold="50" 
  scroll-top="0" 
  scroll-left="0" 
  scroll-into-view="" 
  scroll-with-animation="false" 
  enable-back-to-top="false" 
  bindscrolltoupper="" 
  bindscrolltolower="" 
  bindscroll="">
  <view class="flex_between">
    <text class="courseSum">共八节</text>
    <view class="flex_start">
      <view class="btnBox">
        <image class="icon" src="../../../images/music/sort.png" />
        <text>正序</text>
      </view>
      <view class="btnBox">
        <image 
          hidden="{{nowMusicIndex == -1}}"
          class="icon" 
          src="../../../images/music/play.png" />
        <text 
        data-index="{{nowMusicIndex}}" 
        hidden="{{nowMusicIndex == -1}}"
        bindtap="continuePlay">{{isPlay ? '暂停' : '继续播放'}}</text>
      </view>
    </view>
  </view>
  <view class="nowPlay" hidden="{{nowMusicIndex == -1}}">
    继续播放：{{nowMusicIndex}}.中世纪的艺术游戏
  </view>
  <block wx:for="{{10}}" wx:key="{{index}}">
    <music_list_item 
      bind:musicPlay="musicPlay"
      isPlay="{{isPlayList[index]}}"
      index="{{index}}" />    
  </block>
</scroll-view>
<!-- 音频播放 -->
<music_bg_play 
  isShow="{{isShowFixComponent}}"
  bind:swicthPlay="swicthPlay"
  musicList="{{musicList}}" 
  nowMusicMark="{{nowMusicIndex}}" 
  isSelectPlay="{{isPlay}}"/>

