/* pages/advisory/advisory.wxss */
.guest-button{
    background :red;
  }
  button.btn{
    width: 0;
    height: 0;
  }
  .name{
    margin-top: 240rpx;
    color: #ffffff;
    font-size: 34rpx;
    height: 70rpx;
    width: 200rpx;
    background: #ffc814;
    border-radius: 10rpx;
    display: flex;
    padding-left: 10rpx;
    align-items: center;
  }
  .name > image{
    margin-right: 10rpx;
    width: 40rpx;
    height: 40rpx;
  }
  button > view{
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    overflow: hidden;
    position: fixed;
    left: 50%;
    top: 30%;
    /* border: 1px solid red; */
    transform: translateX(-100rpx);
  }
  button > view > image{
    width: 200rpx;
    height: 200rpx;
  }