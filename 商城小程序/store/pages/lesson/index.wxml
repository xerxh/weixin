<view class='container'>

  <view  wx:for="{{3}}" w:key="{{index}}">
    <good_item_listBox paramsObj="{{paramsObj[index]}}">
      <view class="goodslistView">
        <view class="item_box" 
          wx:for="{{dataList}}"
          wx:key="{{index}}"
          wx:if="{{index < 4}}">
          <goods_item external-width='actualWidth' 
              lessongoods-img="lessongoodsImg" 
              style="width:44%" 
              imagePath="{{item.picurl}}" 
              title="{{item.curriculumName}}" 
              price="{{item.discountPrice}}" 
              sum="{{item.virtualPurchases}}"
              goodsId="{{item.curriculumId}}" 
              isvideo="{{item.isvideo}}"  
              bind:goDetail="goDetail">
            <!-- <text wx:if="{{item.virtualPurchases}}">{{item.virtualPurchases}}人购买</text> -->
          </goods_item>
          <view class="studentPepleBg" />
          <view class="studentPeple">
            {{item.virtualPurchases}}人加入学习
          </view>
        </view>
      </view>
    </good_item_listBox>  
  </view>

