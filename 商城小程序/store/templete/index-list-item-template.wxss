/* components/list-item/index.wxss */
/* index首页列表子项内容样式 */
.listItemContainer{
    /* width: 690rpx; */
    height: 200rpx;
    display: flex;
    padding: 0 30rpx;
    /* justify-content: space-between; */
    justify-content:  left;
    /* width: 750rpx; */

  }
  .ListItemImg{
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
    margin-right: 26rpx;
  }
  .listItemBox{
    width: 454rpx;
    /* padding: 20rpx 0; */
    display: flex;
    flex-direction: column;
    /* justify-content: space-between; */
  }
  .nmber{
    position: relative;
    /* width: 60rpx; */
    display: inline;
    text-align: center;
    margin-right: -1rpx;
    border-radius: 10rpx;
    padding:0 15rpx;
    line-height: 20px;
    padding-left: 25px;
  }
  .nmber > image{
     width: 25px;
     height: 17px;
     z-index: -10;
     right: 15rpx;
     top: 1px;
     position: absolute;
  }
  .nmber > text{
    display: inline-block;
    width: 100%;
    right: 10rpx;
    font-size: 13px;
    text-align: center;
    position: absolute;
  }
  .nmber+view{
    display: inline-block;
  }
  .itemTitle{
    overflow : hidden;
    padding: 3px 0;
    font-size: 30rpx;
    height: 50px;
    /* line-height: 70rpx; */
    font-family: PingFang-Sc-Bold;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  .itemContent{
    margin-top: 4px;
    font-size: 12px;
    /* height: 40px; */
    font-family: PingFang-SC-Regular;
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    color:rgba(104, 102, 102, 0.6);
    -webkit-box-orient: vertical;
  }


