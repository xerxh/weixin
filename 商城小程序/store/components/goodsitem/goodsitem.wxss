/* components/goodsitem/goodsitem.wxss */
.goodsItem{
  /* padding-bottom: 10rpx; */
  background:rgba(255,255,255,1);
  border:1px solid rgba(221,221,221,1);
  border-radius:6rpx;
}
.goodsBox {
  width: 100%;
  display: flex;
}
image{
  width: 250rpx;
  height: 180rpx;
  border-radius:6rpx;
}
.textBox {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* width: 100%; */
  height: 100%;
}
.goodsName{
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(102,102,102,1);
  line-height:33rpx;
  white-space: normal;
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  text-overflow: ellipsis;
}
.goodsProperty{
  display: flex;
  width: 100%;  
  justify-content: space-between;
  font-size: 20rpx;
  color: #CF0101;
}

.priceBox{
  display: flex;
  flex: 1;
  justify-content: space-between;
}

.price{
  font-size:26rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(255,200,20,1);
}
.title{
  font-size:28rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(0,0,0,1);
  line-height:70rpx;
}