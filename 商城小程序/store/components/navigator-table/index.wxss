/* components/navigator-table/index.wxss */
.navigatorTabContaner{
  display: flex;
  padding-top: 49rpx;
  justify-content: space-around;
  background:rgba(255,255,255,1);
}
.line{
  border-bottom: 1px solid rgba(221,221,221,1);
}
.navigatorTabItem{
    flex: 1;
    text-align: center;
    line-height: 60rpx;
    font-size:32rpx;
    font-family:PingFang-SC-Medium;
    font-weight:500;
    color:rgba(102,102,102,1);
}

.navigatorTabItem > view{

  display: inline-block;
  text-align: center;
}

/* 导航栏默认样式 */
.activeDefault{
  /* color: #ffc814; */
  font-size:32rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(0,0,0,1);
  font-family:PingFang-SC-Bold;
  border-bottom: 4rpx solid rgba(0,0,0,1);
}
/* 蓝色颜色样式 */
.activeBlue{
  color:#3d8fff;
  font-size: 34rpx;
  border-bottom: 2.5px solid #3d8fff;
}
