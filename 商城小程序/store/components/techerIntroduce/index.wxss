/* components/techerIntroduce/index.wxss */
.techerIntroduceBox{
  display: flex;
  flex-direction: column;
  text-align: left;
  padding:40rpx 50rpx;
}

.techerInfoBox{
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
  margin-top: 40rpx;
}
.title{
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
  font-family: PingFang-Sc-Bold;
  /* padding-bottom: 40rpx; */
}
.techerIntroduceContent{
  display: flex;
  height: 160rpx;
  width: 494rpx;
  flex-direction: column;
}
.teacherInfo{
  display: -webkit-box;
  font-size: 13px;
  color: #999;
  /* display: block; */
  overflow : hidden;
  height: 55px;
  /* line-height: 55px; */
  word-break: break-all;
  /* -webkit-box-orient: vertical; */
  -webkit-line-clamp:3;
  text-overflow:ellipsis;
  /* -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; */
}
.teachername{
  font-weight: bold;
  /* margin-top: 24rpx; */
  font-size: 30rpx;
  color: #333333;
}
.techerImg{
  width: 160rpx;
  height: 160rpx;
  margin-right: 26rpx;
  border-radius: 50%;
}