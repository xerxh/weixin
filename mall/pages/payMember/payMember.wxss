/* pages/payMember/payMember.wxss */
.payMemberBox{
  padding: 200rpx 0 0 0;
}
.memberImg{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}
.memberCard{
  border: 1px solid gray;
  border-radius: 20rpx;
  height: 250rpx;
  padding: 10px 0 10px 10px;
}
.font_bold{
  font-weight: bold;
}
.flex_wrap{
  flex-wrap: wrap;
}
.memberDate{
  margin-left: 134rpx;
  font-size:25rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.flex{
  display: flex;
}
.col{
  flex-direction: column;
  justify-content: space-between;
}
.between{
  justify-content: space-between;
}
.equityBox{
  margin: 50rpx 41rpx 0 50rpx;
}
.btn{
  border: 1px solid gray;
  border-radius: 30rpx;
  text-align: center;
  /* padding: 5px 0; */
  background: gainsboro;
  margin: 0 auto;
  margin-top: 70rpx;
  width:658rpx;
  height:80rpx;
  line-height: 80rpx;
  background:rgba(255,200,20,1);
}
.couponBox{
  height: 230rpx;
}
.equityIcon{
  height: 112rpx;
  width: 112rpx;
}
.equityItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 48rpx;
}
.itemName{
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(168,129,0,1);
  margin-top: 21rpx;
}
/* 权限按钮 */
.equityBtn{
  text-align: center;
  border: 1px solid gray;
  width:40%;
  border-radius: 20rpx;
  padding: 10px 0;
  margin: 30rpx 20rpx 40rpx 0;
}
.switchBtn{
  /* border: 1px solid gray; */
  border-radius: 30rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  /* padding: 5px 0; */
  /* background: gainsboro; */
}
.switchBtn > text{
  padding: 0 40rpx;
  line-height: 66rpx;
  border-radius: 30rpx;
  text-align: center;
  border: 1px solid rgba(255,200,20,1);
  font-size:30rpx;
  color:rgba(255,255,255,1);
  font-family:PingFang SC;
  font-weight:400;
  /* padding: 5px 0; */
}
.switchBox{
  text-align: center;
  margin-top: 100rpx;
}
.switchBtn :first-child{
  position: relative;
  left: 9px;
  text-indent: 20px;
}
.switchBtn :last-child{
  position: relative;
  right: 9px;
  text-indent: 20px;
}
.activeBtn{
  z-index: 10;
  background: rgba(255,200,20,1);
  color:rgba(255,255,255,1);
}
.memberSwitchBox{
  height: 250rpx;
  padding: 10px 0 10px 10px;
}
.item{
  width: 95%;
}
.vipTip{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.left_line{
  border-left: 6rpx solid rgba(255,200,20,1);
  padding-left: 13px;
}