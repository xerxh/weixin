/* pages/apply/apply.wxss */
.applyBox{
  margin-top: 200rpx;
  padding: 10px 10px;
}
.flex{
  display: flex;
}
.input{
  margin-top: 20rpx;
}
.imgBox{
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.img{
  height: 100px;
  width: 130px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid gray;
  border-radius: 20rpx;
}
.between{
  justify-content: space-between;
}
.name{
  color: gainsboro;
  margin-top: 20rpx;
}
.sendFile{
  background: gainsboro;
  text-align: center;
  padding: 5px 0;
  margin-top: 150rpx;
}
.btn{
  background: gainsboro;
  border-radius: 30rpx;
  padding: 5px 0;
  text-align: center;
  margin-top: 150rpx;
}