/* 搜索外部样式 */
.clearPosition{
  right: 108rpx;
}

.topSize{
  margin-top:160rpx;
}
.listBox {
  padding: 0 30rpx; 
}
.historyMemoryBox, .hotListDataBox, .courseListBox {
  width: 100%;
}
.hitoryTitle, .hotTitle, .clearHitory {
  padding-top: 43rpx;
  margin-bottom: 27rpx;
  font-size: 14px;
  /* font-size:26px; */
  font-family:PingFang SC;
  font-weight:bold;
  /* line-height:36px; */
  color:rgba(51,51,51,1);
}
.hotItem {
  background:rgba(244,244,244,1);
  border-radius:6rpx;
  font-size:13px;
  padding:10rpx 29rpx;
  margin-right:35rpx;
  text-align:center;
  margin-top:30rpx;
  display: inline-block;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.courseItemBox {
  display: flex;
  justify-content: space-around;
}
.img {
  width: 280rpx;
  height: 200rpx;
}
.courseBox {
  box-sizing: border-box;
  width: 380rpx;
  height: 200rpx;
  padding: 10rpx 0 10rpx 10rpx;
  color: #333333;
  font-size: 28rpx;
  /* position: relative; */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.courseItemBox {
  margin-bottom: 30rpx;
}
.courseTitle {
  font-size: 28rpx;
  color: #333;
}
.bottom {
  display: flex;
  justify-content: space-between;
}
.price {
  display: flex;
  align-items: center;
  color: #CF0101;
  font-size: 26rpx;
}
.total {
  display: flex;
  align-items: center;
  color: #999;
  font-size: 20rpx;
}
.topImg{
  height: 80rpx;
  widows: 80rpx;
}

