.commentListItemBox{
  display: flex;
  flex-direction: column;
  padding:10rpx 30rpx;
  margin-bottom: 20rpx;
}

.userBox{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 20rpx 0;
}
.userInfo{
  display: flex;
  justify-content: flex-start;
}
.avator{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.userName{
  font-size: 28rpx;
  color: #999999;
  line-height: 60rpx;
  font-family: PingFang-Sc-Medium;
}
.date{
  color: #D3C9C9;
  font-size: 28rpx;
}
.commentItemScore{
  display: inline;
}
.commentItemScore > image{
  width: 30rpx;
  height: 30rpx;
}
.commentContent{
  margin-left: 80rpx;
  text-align: left;
  font-size: 28rpx;
  color: #333333;
  margin-top: 20rpx;
}
.authorTitle{
  margin-left: 80rpx;
  border-left: 6rpx solid #ffc814;
  text-indent: 10rpx;
  margin-top: 40rpx;
  font-size: 25rpx;
  color: #999999;
  line-height: 1;
}
.adminReply {
  text-align: left;
}
.authorContent{
  margin-top: 20rpx;
  margin-left: 80rpx;
  font-size: 25rpx;
  color: #333333;
}