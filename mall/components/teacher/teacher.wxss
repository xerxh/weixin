/* components/teacher/teacher.wxss */
.teacherInfoBox{
  display: flex; 
  align-items: center;
}
.teacherInfo{
  display: flex;
  width: 590rpx;
  /* height: 130rpx; */
  flex-direction: column; 
  padding-left: 22rpx;
  font-size:14px;
  font-family:San Francisco Text;
  font-weight:500;
  color:rgba(0,0,0,1);
}
.teacherName{
  font-weight: bold;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.teacherTip{
  margin-top: 16rpx;
  color:rgba(102,102,102,1);
  font-size: 13px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.avator{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}