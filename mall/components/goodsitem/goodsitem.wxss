/* components/goodsitem/goodsitem.wxss */
.goodsItem{
  /* padding-bottom: 10rpx; */
  background:rgba(255,255,255,1);
  /* border:1px solid rgba(221,221,221,1); */
  border-radius:6rpx;
  width: 100%;
}
.goodsBox {
  width: 100%;
  display: flex;
}
image{
  width: 250rpx;
  height: 180rpx;
  border-radius:6rpx;
}
.textBox {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* width: 100%; */
  padding: 10rpx 30rpx 10rpx 0;
  box-sizing: border-box;
  /* height: 100%; */
  /* flex: 1; */
}
.goodsName{
  font-size:12px;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
  white-space: normal;
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  text-overflow: ellipsis;
  width: 289rpx;
}
.goodsProperty{
  display: flex;
  width: 100%;  
  justify-content: space-between;
  font-size: 20rpx;
  color: #CF0101;
}

.priceBox{
  display: flex;
  flex: 1;
  justify-content: space-between;
}

.price{
  font-size:26rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(255,200,20,1);
}
.title{
  font-size:14px;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(51,51,51,1);
  overflow: hidden;
  text-overflow:ellipsis; 
  white-space:nowrap;
  /* width:275rpx; */
}
.classSum{
  display: flex;
  /* height: 20px; */
  align-items: center;
  /* font-size:22rpx; */
  /* width: 100%; */
  color:rgba(255,255,255,1);
  font-family:San Francisco Text;
  font-weight:400;
  position: absolute;
  bottom: 10rpx;
  left: 0;
  right: 0;
  background:rgba(0,0,0,1);
  /* background: red; */
  opacity:0.5;
  border-radius:0px 0px 10rpx 10rpx;
}
.iconImg{
  width: 13px;
  height: 12px;
  margin: 0 19rpx 0 12px;
}
.sum{
  font-size:12px;
  font-family:San Francisco Text;
  font-weight:400;
  color:rgba(255,255,255,1);
}
.imgBox{
  position: relative;
}