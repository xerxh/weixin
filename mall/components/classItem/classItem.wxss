/* components/classItem/classItem.wxss */
.classContainer{
  display: flex;
  flex-direction: column;
  width: 320rpx;
}
.classImg{
  width: 100%;
  height: 100%;
}
.classImgBox{
  width: 330rpx;
  height: 210rpx;
  border-radius: 10rpx;
  position: relative;
}
.classSum{
  display: flex;
  height: 20px;
  align-items: center;
  font-size:22rpx;
  /* width: 100%; */
  color:rgba(255,255,255,1);
  font-family:San Francisco Text;
  font-weight:400;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background:rgba(0,0,0,1);
  opacity:0.5;
  border-radius:0px 0px 10rpx 10rpx;
}
.iconImg{
  width: 13px;
  height: 12px;
  margin: 0 19rpx 0 12px;
}
.sum{
  font-size:12px;
  font-family:San Francisco Text;
  font-weight:400;
  line-height:36px;
  color:rgba(255,255,255,1);
}
.money{
  font-size:14px;
  font-family:San Francisco Text;
  font-weight:400;
  color:rgba(255,0,0,1);
  margin: 12rpx 0 42rpx 0;
}
.title{
  font-size:14px;
  font-family:PingFang SC;
  font-weight:bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color:rgba(51,51,51,1);
  margin-top: 24rpx;
}
.classIntro{
  font-size:12px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color:rgba(153,153,153,1);
}