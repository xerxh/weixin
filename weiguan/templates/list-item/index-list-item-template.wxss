/* components/list-item/index.wxss */
/* index首页列表子项内容样式 */
.listItemContainer{
    width: 657rpx;
    display: flex;
    /* padding: 0 30px; */
    justify-content: space-between;
  }
  .ListItemImg{
    width: 230rpx;
    height: 260rpx;
  }
  .listItemBox{
    width: 405rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .nmber{
    /* width: 60rpx; */
    display: inline;
    text-align: left;
    border: 1px solid black;
    border-radius: 5px;
    margin-right: 10px;
    padding:0 15rpx;
  }
  .itemTitle{
    overflow : hidden;
    padding: 3rpx 0;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  .itemContent{
    font-size: 14px;
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
  }


