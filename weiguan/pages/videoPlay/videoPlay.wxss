.videoContainer{
  text-align: left;
  padding: 20rpx;
  border-bottom: 9px solid #f2f2f2;
}
.title{
  font-size: 14px;
  font-weight: 700;
}
.courseDetailTitle{
  font-size: 17px;
  font-weight: bold;
  padding-bottom: 30rpx;
}
.label{
  margin-top: 30rpx;
  font-size: 11px;
  font-family: "Arial Normal", Arial;
  font-weight: 400;
  color: rgb(153, 153, 153);
}
.navContent{
  font-size: 13px;
  text-align: left;
  padding: 20rpx;
  border-bottom: 9px solid #f2f2f2;
}
.navContent > image{
  margin-top: 30rpx;
  width: 680rpx;
  height: 300rpx;
}
/* 课程 */
.listBox{
  margin-top: 40rpx;
}
.videoListTitle{
  text-align: left;
  color: #FFD214;
  margin-left: 50rpx;
  font-size: 16px;
}
.videoListTitle+view{
  text-align: left;
  margin-left: 80rpx;
  font-size: 13px;
  color: #999;
}
.listImgBox{
  position: relative;
}
.listImgBox > image{
  width: 200rpx;
  height: 200rpx;
}
.listContentBox{
  /* position: relative; */
  text-align: left;
}
.number{
  /* position: absolute;
  top: 0; */
  display: inline;
  border: 1px solid black;
  border-radius: 5px;
  margin-right: 10rpx;
  padding:0 15rpx;
}
.list{
  margin-top: 2px;
  position: relative;
  display: flex;
  padding: 20rpx 20rpx 0 20rpx;
  justify-content: flex-start;
  /* border-bottom: 1px solid black; */
}
.listTitle{
  margin-left: 20rpx;
}
.displayData{
  position: absolute;
  bottom: 20rpx;
  right: 15rpx;
  color: #fff;
  font-size: 12px;
  padding: 3rpx 10rpx;
  background: #000;
}
.recommendContent{
  text-align: left;
  margin-top: 15rpx;
  font-size: 14px;
  margin-left: 20rpx;
  color: #999;
}